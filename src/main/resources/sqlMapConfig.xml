<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration SYSTEM "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="cacheEnabled" value="true"/>
		<setting name="mapUnderscoreToCamelCase" value=""/>
		<setting name="defaultExecutorType" value="REUSE"/>
		<setting name="lazyLoadingEnabled" value="true"/>
		<setting name="defaultStatementTimeout" value="25000"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.longtop.efmp.vo.RoleVO" alias="role"/>
		<typeAlias type="com.longtop.efmp.vo.UserVO" alias="user"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="com/longtop/efmp/dao/role.xml"/>
		<mapper resource="com/longtop/efmp/dao/user.xml"/>
	</mappers>
</configuration>
